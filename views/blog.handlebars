{{#if logged_in}}
<form id="blog-form" class="form new-project-form col-8">
  <h2>Update Blog</h2>

  <div class="form-group">
    <label for="blog-name">Title</label>
    <textarea class="form-input" id="blog-name" name="project-name">{{title}}</textarea>
  </div>

  <div class="form-group">
    <label for="blog-desc">Body</label>
    <textarea class="form-input" id="blog-desc" name="blog-desc">{{body}}</textarea>
  </div>
  <input id="post-id" value="{{id}}" type="hidden" />

  <p>Created by {{user.name}} on {{format_date date_created}}</p>
  <div class="form-group">
    <button class="btn btn-sm btn-dark" type="submit" id="blogSubmit" data-id="{{id}}">Update</button>
  </div>
</form>
{{else}}
<div class="text-center">
  <h1>{{title}}</h1>
  <p>{{body}}</p>
  <p>Created by {{user.name}} on {{format_date date_created}}</p>
</div>
{{/if}}

<script src="/js/blog.js"></script>