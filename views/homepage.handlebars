<!-- Loop over each object in the blog array -->
{{#each blogs as |blog| }}
<div class="row mb-4 project">
  <div class="col-md-5">
    <h2>
      <a class="state-link" href="/blog/{{blog.id}}">{{blog.title}}</a>
    </h2>
    <p>
    <p>Created by {{user.name}} on {{format_date blog.date_created}}</p>
  </div>
  <div>
    <p>
      {{blog.body}}
    </p>
  </div>
</div>
{{/each}}